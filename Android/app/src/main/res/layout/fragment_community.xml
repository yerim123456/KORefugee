<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Community.CommunityFragment">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/giude_click"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Translate"
        android:textColor="#3D3D3D"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
    android:id="@+id/textView3"
    android:layout_width="326dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="130dp"
    android:text="Please select a way
to upload the file to be translated."
        android:textAlignment="center"
    android:textColor="#3D3D3D"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/way_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/camera"
            android:layout_width="180dp"
            android:layout_height="269dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/translate_camera_click_unclick"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/pdf"
            android:layout_width="180dp"
            android:layout_height="269dp"
            android:background="@drawable/translate_pdf_click_unclick"
            android:button="@null" />
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startButton"
        android:layout_width="121dp"
        android:layout_height="47dp"
        android:background="@drawable/roundedge_8_orange"
        android:layout_marginTop="60dp"
        android:text="START"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/way_radio_group" />

</androidx.constraintlayout.widget.ConstraintLayout>