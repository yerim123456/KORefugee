<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Guide.GuideDocumenr01Activity">
    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Refugee application during stay"
        android:textColor="#3D3D3D"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/paper"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/paper"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Submission Documents"
                    android:textColor="#3D3D3D"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/paper"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/button1_application"
                    android:layout_width="360dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/roundedge_8_orange"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/subtitle1" />

                <TextView
                    android:id="@+id/button1_title"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:elevation="2dp"
                    android:text="An application for refugee status"
                    android:textColor="#3D3D3D"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/button1_application"
                    app:layout_constraintStart_toStartOf="@+id/button1_application"
                    app:layout_constraintTop_toTopOf="@+id/button1_application" />

                <ImageView
                    android:id="@+id/goButton1"
                    android:layout_width="87dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/more"
                    android:elevation="2dp"
                    app:layout_constraintEnd_toEndOf="@+id/button1_application"
                    app:layout_constraintTop_toTopOf="@+id/button1_application" />

                <ImageButton
                    android:id="@+id/button2_Passport"
                    android:layout_width="360dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/roundedge_8_yellow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button1_application" />

                <TextView
                    android:id="@+id/button2_title"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:elevation="2dp"
                    android:text="Passport"
                    android:textColor="#3D3D3D"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/button2_Passport"
                    app:layout_constraintStart_toStartOf="@+id/button2_Passport"
                    app:layout_constraintTop_toTopOf="@+id/button2_Passport" />

                <ImageView
                    android:id="@+id/goButton2"
                    android:layout_width="87dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/more"
                    android:elevation="2dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/button2_Passport"
                    app:layout_constraintTop_toTopOf="@+id/button2_Passport" />

                <ImageButton
                    android:id="@+id/button3_Certificate"
                    android:layout_width="360dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/roundedge_8_yellow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button2_Passport" />

                <TextView
                    android:id="@+id/button3_title"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:elevation="2dp"
                    android:text="Certificate of alien registration"
                    android:textColor="#3D3D3D"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/button3_Certificate"
                    app:layout_constraintStart_toStartOf="@+id/button3_Certificate"
                    app:layout_constraintTop_toTopOf="@+id/button3_Certificate" />

                <ImageView
                    android:id="@+id/goButton3"
                    android:layout_width="87dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/more"
                    android:elevation="2dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/button3_Certificate"
                    app:layout_constraintTop_toTopOf="@+id/button3_Certificate" />


                <ImageView
                    android:id="@+id/button4_Evidence"
                    android:layout_width="360dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/roundedge_8_yellow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button3_Certificate" />

                <TextView
                    android:id="@+id/button4_title"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:elevation="2dp"
                    android:text="Evidence to be used for reference"
                    android:textColor="#3D3D3D"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/button4_Evidence"
                    app:layout_constraintStart_toStartOf="@+id/button4_Evidence"
                    app:layout_constraintTop_toTopOf="@+id/button4_Evidence" />

                <ImageView
                    android:id="@+id/goButton4"
                    android:layout_width="87dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/more"
                    android:elevation="2dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/button4_Evidence"
                    app:layout_constraintTop_toTopOf="@+id/button4_Evidence" />

                <ImageButton
                    android:id="@+id/button5_picture"
                    android:layout_width="360dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/roundedge_8_yellow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button4_Evidence" />

                <TextView
                    android:id="@+id/button5_title"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:elevation="2dp"
                    android:text="Your picture"
                    android:textColor="#3D3D3D"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/button5_picture"
                    app:layout_constraintStart_toStartOf="@+id/button5_picture"
                    app:layout_constraintTop_toTopOf="@+id/button5_picture" />

                <ImageView
                    android:id="@+id/goButton5"
                    android:layout_width="87dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/more"
                    android:elevation="2dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/button5_picture"
                    app:layout_constraintTop_toTopOf="@+id/button5_picture" />

                <ImageView
                    android:id="@+id/house1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/house1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button5_picture" />

                <TextView
                    android:id="@+id/subtitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Place of application"
                    android:textColor="#3D3D3D"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/house1"
                    app:layout_constraintStart_toEndOf="@+id/house1"
                    app:layout_constraintTop_toTopOf="@+id/house1" />


                <TextView
                    android:id="@+id/subcontent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="the local immigration office "
                    android:textColor="#3D3D3D"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/house1" />

                <ImageView
                    android:id="@+id/apply"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/apply"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/subcontent2" />

                <TextView
                    android:id="@+id/subtitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="How to apply"
                    android:textColor="#3D3D3D"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/apply"
                    app:layout_constraintStart_toEndOf="@+id/apply"
                    app:layout_constraintTop_toTopOf="@+id/apply" />


                <TextView
                    android:id="@+id/subcontent3"
                    android:layout_width="358dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Submit an application for refugee status to the head of the local immigration and immigration office at the time of immigration."
                    android:textColor="#3D3D3D"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/apply" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>