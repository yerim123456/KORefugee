<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Guide.GuideFragment">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/voca_click"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Voca"
        android:textColor="#3D3D3D"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/daytexlayout"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <TextView
            android:id="@+id/daytext"
            android:layout_width="77dp"
            android:layout_height="49dp"
            android:text="DAY"
            android:textColor="#3D3D3D"
            android:textSize="36dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/day_01_text"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:text="02"
            android:textColor="#3D3D3D"
            android:textSize="36dp"
            android:textStyle="bold" />

    </LinearLayout>


    <Button
        android:id="@+id/daystudybutton"
        android:layout_width="301dp"
        android:layout_height="67dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedge_34_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daytexlayout" />

    <TextView
        android:layout_width="161dp"
        android:layout_height="33dp"
        android:elevation="2dp"
        android:layout_marginRight="45dp"
        android:text="Let's go study!"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/daystudybutton"
        app:layout_constraintEnd_toEndOf="@+id/daystudybutton"
        app:layout_constraintTop_toTopOf="@+id/daystudybutton" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/vocastudy"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/daystudybutton"
        app:layout_constraintStart_toStartOf="@+id/daystudybutton"
        app:layout_constraintTop_toTopOf="@+id/daystudybutton" />

    <TextView
        android:id="@+id/parttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="33dp"
        android:text="PART"
        android:textColor="#3D3D3D"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daystudybutton" />

    <View
        android:id="@+id/view"
        android:layout_width="345dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#DDDDDD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parttext" />

    <ImageButton
        android:id="@+id/button2_law"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="33dp"
        android:background="@drawable/law"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />


    <ImageButton
        android:id="@+id/button1_medical"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:background="@drawable/medical"
        app:layout_constraintStart_toEndOf="@+id/button3_life"
        app:layout_constraintTop_toBottomOf="@+id/view" />


    <ImageButton
        android:id="@+id/button3_life"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:background="@drawable/life"
        app:layout_constraintStart_toEndOf="@+id/button2_law"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/savetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="33dp"
        android:text="SAVE"
        android:textColor="#3D3D3D"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3_life" />

    <ImageButton
        android:id="@+id/more"
        android:layout_width="61dp"
        android:layout_height="27dp"
        android:background="@drawable/more2"
        app:layout_constraintBottom_toBottomOf="@+id/savetext"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/savetext" />


    <View
        android:id="@+id/view2"
        android:layout_width="345dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#DDDDDD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/savetext" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginHorizontal="33dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="223dp"
                android:layout_height="133dp"
                android:background="@drawable/roundedge_8_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/one_korean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="21dp"
                android:elevation="2dp"
                android:text="한글"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/image1"
                app:layout_constraintTop_toTopOf="@+id/image1" />
            <TextView
                android:id="@+id/one_mothertoungue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="21dp"
                android:elevation="2dp"
                android:text="korean"
                android:textColor="#6D6D6D"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/image1"
                app:layout_constraintTop_toBottomOf="@+id/one_korean" />

            <ImageView
                android:id="@+id/category_image1"
                android:layout_width="70dp"
                android:layout_height="27dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/click_life_save"
                app:layout_constraintBottom_toBottomOf="@+id/image1"
                app:layout_constraintEnd_toEndOf="@+id/image1"/>


            <ImageView
                android:id="@+id/image2"
                android:layout_width="223dp"
                android:layout_height="133dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/roundedge_8_gray"
                app:layout_constraintStart_toEndOf="@+id/image1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/two_korean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="21dp"
                android:elevation="2dp"
                android:text="한글"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/image2"
                app:layout_constraintTop_toTopOf="@+id/image2" />
            <TextView
                android:id="@+id/two_mothertoungue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="21dp"
                android:elevation="2dp"
                android:text="korean"
                android:textColor="#6D6D6D"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/image2"
                app:layout_constraintTop_toBottomOf="@+id/two_korean" />

            <ImageView
                android:id="@+id/category_image2"
                android:layout_width="70dp"
                android:layout_height="27dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/click_life_save"
                app:layout_constraintBottom_toBottomOf="@+id/image2"
                app:layout_constraintEnd_toEndOf="@+id/image2"/>



            <ImageView
                android:id="@+id/image3"
                android:layout_width="223dp"
                android:layout_height="133dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/roundedge_8_gray"
                app:layout_constraintStart_toEndOf="@+id/image2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/three_korean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="21dp"
                android:elevation="2dp"
                android:text="한글"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/image3"
                app:layout_constraintTop_toTopOf="@+id/image3" />
            <TextView
                android:id="@+id/three_mothertoungue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="21dp"
                android:elevation="2dp"
                android:text="korean"
                android:textColor="#6D6D6D"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/image3"
                app:layout_constraintTop_toBottomOf="@+id/three_korean" />

            <ImageView
                android:id="@+id/category_image3"
                android:layout_width="70dp"
                android:layout_height="27dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/click_life_save"
                app:layout_constraintBottom_toBottomOf="@+id/image3"
                app:layout_constraintEnd_toEndOf="@+id/image3"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>




